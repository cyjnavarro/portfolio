---
import "../styles/global.css";

import IntroSection from "../components/IntroSection.astro";
import EducationSection from "../components/EducationSection.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
import ContactSection from "../components/ContactSection.astro";
import ProfileSidebar from "../components/ProfileSidebar.astro";

import DottedBG from "../assets/dotted_bg.svg";

const name = "Cyryl John Navarro";
const role = "Aspiring Web Developer";
const location = "San Juan City, Philippines";
const email = "cyjnavarro@gmail.com";
const phone = "+63 992 285 5874";
const github = "https://github.com/cyjnavarro";
const linkedin = "https://www.linkedin.com/in/cyjnavarro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{name} | Portfolio</title>
  </head>
  <body
  class="m-0 flex h-min-screen bg-[#101314] p-0 md:relative md:h-screen"
  style={`background-image: url(${DottedBG.src}); background-repeat: repeat; background-size: 160px; background-attachment: fixed;`}
>
    <!-- Custom dark bluish overlay with blur -->
    <div
      class="fixed inset-0 pointer-events-none z-0 backdrop-blur-xs opacity-90"
      style="background-color: rgba(10, 9, 9, 0.94);"
    >
    </div>

    <main
      class="relative z-10 mx-auto max-w-5xl px-5 pb-12 pt-6 md:px-6 md:pb-16 md:pt-8"
    >
      <header class="sticky top-0 z-20 mb-4 pb-3 pt-6 sm:mb-5">
        <div
          class="mx-auto flex max-w-3xl items-center justify-between gap-4 rounded-full border border-slate-600/70 bg-slate-900/90 px-4 py-2 shadow-lg shadow-slate-950/70"
        >
          <div class="flex items-center gap-2.5">
            <div
              class="flex h-8 w-8 items-center justify-center rounded-2xl bg-[#0C0906] text-sm font-semibold text-white shadow-[0_0_0_1px_rgba(15,23,42,0.9),0_12px_24px_rgba(15,23,42,0.8)]"
            >
              {name[0]}
            </div>
            <div class="leading-tight">
              <div class="text-xs font-medium text-white uppercase tracking-[0.16em]">
                {name}
              </div>
              <div class="text-[11px] text-slate-400">
                {role}
              </div>
            </div>
          </div>

          <nav class="flex items-center gap-1.5 text-[11px] text-slate-300">
            <a
              href="#intro"
              class="rounded-full border border-transparent px-3 py-1 text-slate-400 transition hover:-translate-y-0.5 hover:border-slate-500/70 hover:bg-slate-900/90 hover:text-slate-100"
            >
              Intro
            </a>
            <a
              href="#education"
              class="hidden rounded-full border border-transparent px-3 py-1 text-slate-400 transition hover:-translate-y-0.5 hover:border-slate-500/70 hover:bg-slate-900/90 hover:text-slate-100 sm:inline-flex"
            >
              Education
            </a>
            <a
              href="#projects"
              class="hidden rounded-full border border-transparent px-3 py-1 text-slate-400 transition hover:-translate-y-0.5 hover:border-slate-500/70 hover:bg-slate-900/90 hover:text-slate-100 sm:inline-flex"
            >
              Projects
            </a>
            <a
              href="#contact"
              class="inline-flex rounded-full bg-gradient-to-r from-cyan-400 to-sky-500 px-3.5 py-1 text-[11px] font-semibold text-slate-950 shadow-md shadow-cyan-500/40 transition hover:-translate-y-0.5 hover:shadow-lg"
            >
              Contact
            </a>
          </nav>
        </div>
      </header>

      <div
        class="mx-auto mt-4 grid gap-5 sm:mt-5 md:grid-cols-[minmax(0,0.9fr)_minmax(0,1.6fr)]"
      >
        <ProfileSidebar
          name={name}
          role={role}
          location={location}
          email={email}
          github={github}
          linkedin={linkedin}
        />

        <div class="space-y-4 sm:space-y-5">
          <IntroSection
            id="intro"
            name={name}
            role={role}
            location={location}
          />
          <EducationSection id="education" />
          <ProjectsSection id="projects" />
          <ContactSection
            id="contact"
            location={location}
            email={email}
            phone={phone}
            github={github}
            linkedin={linkedin}
          />
        </div>
      </div>

      <footer
        class="mx-auto mt-4 max-w-3xl pt-2 text-center text-[11px] text-slate-500"
      >
        Â© {new Date().getFullYear()}
        CJN. Built with Astro &amp; Tailwind CSS.
      </footer>
    </main>
  </body>
</html>
