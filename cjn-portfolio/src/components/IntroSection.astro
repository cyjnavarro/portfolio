---
export interface Props {
  id?: string;
  name: string;
  role: string;
  location: string;
}

const { id = "intro", name, role, location } = Astro.props;
---

<section
  id={id}
  class="rounded-2xl border border-slate-800/70 bg-slate-950/70 px-5 py-6 shadow-xl shadow-black/60 backdrop-blur md:px-7 md:py-7"
>
  <div class="space-y-4">
    <header class="flex items-baseline justify-between gap-3">
      <h2
        class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-400"
      >
        Overview
      </h2>
      <span
        class="inline-flex items-center rounded-full border border-slate-700/70 bg-slate-900/90 px-3 py-0.5 text-[11px] text-slate-400"
      >
        About me
      </span>
    </header>

    <div class="space-y-3">
      <h1 class="text-xl font-semibold tracking-tight text-slate-50">
        Hi, I’m
        <span class="text-sky-400">
          {name}
        </span>
      </h1>
      <p class="text-sm text-slate-400">
        {role} · {location}
      </p>

      <p class="text-sm leading-relaxed text-slate-300">
        A Motivated and detail-oriented individual with a strong sense of
        responsibility and teamwork. Skilled in following procedures,
        maintaining quality standards, and supporting efficient daily
        operations.
      </p>

      <div class="flex flex-wrap gap-2 text-[11px] text-slate-300">
        <span
          class="inline-flex items-center gap-2 rounded-full border border-emerald-400/40 bg-slate-900/90 px-3 py-1"
        >
          <span
            class="h-2 w-2 rounded-full bg-emerald-400 shadow-[0_0_8px_rgba(16,185,129,0.7)]"
          ></span>
          Open to opportunities
        </span>
        <span
          class="inline-flex items-center rounded-full border border-slate-600/70 bg-slate-900/90 px-3 py-1"
        >
          Passionate about learning &amp; building
        </span>
      </div>
    </div>
  </div>
</section>
