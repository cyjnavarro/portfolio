---
export interface Props {
  id?: string;
  location: string;
  email: string;
  phone: string;
  github: string;
  linkedin: string;
  facebook: string;
  /** Path to resume file in public folder, e.g. "/resume.pdf" */
  resumeUrl?: string;
}

const {
  id = "contact",
  location,
  email,
  phone,
  github,
  linkedin,
  facebook,
  resumeUrl = "/Navarro, Cyryl John.pdf",
} = Astro.props;
---

<section
  id={id}
  class="relative overflow-hidden rounded-2xl border border-slate-800/70 bg-slate-950/60 px-5 py-6 shadow-2xl shadow-black/70 backdrop-blur md:px-7 md:py-7"
>
  <div class="space-y-5">
    <div class="flex items-baseline justify-between gap-3">
      <h2
        class="text-xs font-medium uppercase tracking-[0.25em] text-slate-400"
      >
        Contact
      </h2>
      <span
        class="inline-flex items-center rounded-full border border-slate-600/70 bg-slate-900/80 px-3 py-0.5 text-[11px] text-slate-400"
      >
        Letâ€™s connect
      </span>
    </div>

    <div class="grid gap-5 md:grid-cols-[minmax(0,1.4fr)_minmax(0,1.1fr)]">
      <div class="space-y-3 text-sm text-slate-300">
        <div class="space-y-1">
          <div
            class="text-[11px] font-semibold uppercase tracking-[0.18em] text-slate-500"
          >
            Email
          </div>
          <a
            href={`mailto:${email}`}
            class="text-sm text-slate-100 underline-offset-2 hover:underline"
          >
            {email}
          </a>
        </div>

        <div class="space-y-1">
          <div
            class="text-[11px] font-semibold uppercase tracking-[0.18em] text-slate-500"
          >
            Phone
          </div>
          <div class="text-sm text-slate-100">
            {phone}
          </div>
        </div>

        <div class="space-y-1">
          <div
            class="text-[11px] font-semibold uppercase tracking-[0.18em] text-slate-500"
          >
            Location
          </div>
          <div class="text-sm text-slate-100">
            {location}
          </div>
        </div>

        <div class="mt-2 flex flex-wrap gap-2">
          <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center rounded-full border border-slate-600/80 bg-slate-900/95 px-3 py-1 text-xs text-slate-300 transition hover:-translate-y-0.5 hover:border-cyan-400/80 hover:text-slate-50"
          >
            GitHub
          </a>
          <a
            href={linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center rounded-full border border-slate-600/80 bg-slate-900/95 px-3 py-1 text-xs text-slate-300 transition hover:-translate-y-0.5 hover:border-cyan-400/80 hover:text-slate-50"
          >
            LinkedIn
          </a>
          <a
          href={facebook}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center rounded-full border border-slate-600/80 bg-slate-900/95 px-3 py-1 text-xs text-slate-300 transition hover:-translate-y-0.5 hover:border-cyan-400/80 hover:text-slate-50"
        >
          Facebook
        </a>
        </div>
      </div>

      <div
        class="flex flex-col items-center justify-center gap-3 rounded-xl border border-slate-600/70 bg-slate-950/80 px-3.5 py-6 text-center"
      >
        <p class="text-xs text-slate-300">
          Download my resume for more details about my experience and skills.
        </p>
        <a
          href={resumeUrl}
          download
          class="inline-flex items-center gap-2 rounded-lg border border-slate-500/70 bg-slate-900/90 px-5 py-2.5 text-sm font-medium text-slate-100 shadow-md transition hover:-translate-y-0.5 hover:border-cyan-400/70 hover:bg-slate-800 hover:text-white hover:shadow-lg"
        >
          <svg
            class="h-5 w-5 text-slate-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            />
          </svg>
          Download resume
        </a>
      </div>
    </div>
  </div>
</section>
